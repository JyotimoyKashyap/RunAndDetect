<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/account_icon_png"
        android:layout_width="70dp"
        android:layout_height="120dp"
        android:src="@drawable/google"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/email_address_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Email ID"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/account_icon_png"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/guideline_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Guidelines"
        android:layout_marginTop="10dp"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_address_text_view"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign_out_btn"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:elevation="0dp"
        app:cornerRadius="0dp"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textColor="#EF0808"
        app:iconTint="#EF0808"
        android:text="Sign Out"
        app:rippleColor="@color/ripple_color_warning"
        android:textAllCaps="false"
        app:icon="@drawable/ic_sign_out"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>